<% if flash.any? %>
  <% flash.each do |name, msg| %>
      <div id="messageBar-controller-<%= params[:controller].gsub('/','-') %>" role="alert" class=" alert alert-<%= name == 'notice' ? 'primary' : 'warning' %> alert-icon alert-dismissible">
        <% if msg.is_a?(String) %>
          <div class="icon">
            <span class="s7-check"></span>
          </div>
          <div class="message">
            <button type="button" data-dismiss="alert" aria-label="Close" class="close">
              <span aria-hidden="true" class="s7-close"></span>
            </button>
            <%= msg %>
          </div>
        <% end %>
      </div>
  <% end %>
<% end %>
