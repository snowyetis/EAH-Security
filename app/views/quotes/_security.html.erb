  <div class="modal fade" id="security_modal" role="dialog">
    <div class="modal-dialog">
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Safes</h4>
        </div>
        <div class="modal-body">
          <h3>Services we offer</h3>
          <ul>
            <li>
              Servicing
            </li>
            <li>
              Combination Change
            </li>
            <li>
              Opening and Repair
            </li>
            <li>
              Moving
            </li>
            <li>
              Sales
            </li>
          </ul>
          <%= form_for(@quote) do |f| %>
            <div class="form-group">
              <%= f.hidden_field :user_id %>
              <%= f.hidden_field :quote_type, value: "Security" %>
              <%= f.hidden_field :pending, value: "true" %>
            </div>
            <%= f.fields_for(:questionaire) do |q| %>
              <%= q.hidden_field :product_type, value: "Safe" %>
              <%= q.label "Request" %>
              <%= q.text_area :comments, class: "form-control" , placeholder: "Type your requests here" %>
            <% end %>
        </div>
        <div class="modal-footer">
            <%= f.submit "Submit for Quote", class: "btn btn-primary" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
